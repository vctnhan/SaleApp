<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TatcasanphamActivity"
    tools:showIn="@layout/app_bar_tatcasanpham">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"

        android:gravity="center"
        android:text="Sắp xếp theo: "
        android:textSize="18sp"
        android:textColor="@color/hong"/>

    <Button
        android:gravity="center"
        android:id="@+id/btnAsc"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:onClick="sortByAsc"
        android:text="Giá"
        android:textColor="@color/hong"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"

       />
    <Button
        android:gravity="center"
        android:id="@+id/btnAlpha"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:onClick="sortByAlpha"
        android:text="Tên"
        android:textColor="@color/hong"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"

        />
</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvAllPhone"></android.support.v7.widget.RecyclerView>

</LinearLayout>